         	 <value>/opt/hadoop-2.6.0-cdh5.8.2/yarn/local</value>
          </property>

         <property>
              <name>yarn.log-aggregation-enable</name>
              <value>true</value>
        </property>
        <property>
               <name>yarn.nodemanager.remote-app-log-dir</name>
               <value>/user/yarn/logs</value>
        </property>

  
	<property>

   		 <name>yarn.log.server.url</name>
       		 <value>http://sparkmaster:19888/jobhistory/logs</value>
        </property>

	<property>
